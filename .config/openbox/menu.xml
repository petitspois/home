<menu id="root-menu" label="LXDE">
  <separator label="LXDE" />

  <!-- 常用程序 -->
        <item label="xterm">
            <action name="Execute"><execute>xterm</execute></action>
        </item>
        <item label="firefox">
            <action name="Execute"><execute>firefox</execute></action>
        </item>
        <item label="Run">
            <action name="Execute"><execute>gmrun</execute></action>
        </item>
        <item label="pcmanfm">
            <action name="Execute"><execute>pcmanfm</execute></action>
        </item>
        <item label="leafpad">
            <action name="Execute"><execute>leafpad</execute></action>
        </item>
        <item label="mtpaint">
            <action name="Execute"><execute>mtpaint</execute></action>
        </item>

  <!-- Applications 子菜单 -->
  <menu id="apps-menu" />
  <separator />
  <menu id="client-list-menu" />
  <separator />

  <!-- 动态添加 / 删除 虚拟桌面 -->
  <item label="Desktop Settings">
    <action name="Execute">
      <startupnotify><enabled>yes</enabled></startupnotify>
      <command>pcmanfm --desktop-pref</command>
    </action>
  </item>

  <!-- Openbox 配置 -->
  <item label="Openbox Settings">
    <action name="Execute">
      <startupnotify><enabled>yes</enabled><icon>openbox</icon></startupnotify>
      <command>obconf</command>
    </action>
  </item>
  <item label="Reload Config">
    <action name="Reconfigure" />
  </item>
  <separator />

  <item label="Restart">
    <action name="Restart" />
  </item>
  <item label="Exit">
    <action name="Execute"><command>lxde-logout</command></action>
  </item>
