# vim:set et ft=conf fdm=marker sw=4 sts=4 ts=4 nopaste :

# 继承参考 / 发送队列
# http://www.fwolf.com/blog/tag/mutt

defaults
    tls_trust_file /etc/ssl/certs/ca-certificates.crt
    logfile ~/mail/log/msmtp.log
    # archwiki
    #tls_trust_file   /usr/share/ca-certificates/mozilla/Thawte_Premium_Server_CA.crt

# 如果使用465端口，则置tls_starttls off
# 如果使用587端口，则置tls_starttls on
account gmail
    host smtp.gmail.com
    port 587
    auth on
    tls on
    tls_starttls on

# 账号名称最好和邮件中的 From: 对应，发送时 msmtp 就能知道调用哪个账号
# account 可以用冒号:来"继承"其它已定义账号的设置
# 为所有gmail邮箱指定了host、port、auth、tls四个属性
# 在具体的账号设置中，只要再设定from、user、password 即可
# 很方便，"继承"多个账号的话用逗号隔开
account volcanowill@gmail.com : gmail
    from volcanowill@gmail.com
    user volcanowill@gmail.com
    password "你的密码"

#account another_mailbox@domain.com
#    host smtp.domain.com
#    auth on
#    from another_mailbox@domain.com
#    user "another_mailbox"
#    password "another_secret"

# 最后默认发信账号(匹配寻找account失败时使用)default可以直接"继承"某个账号的设置过来
account default : volcanowill@gmail.com


